@model RS1_2019_12_02.ViewModels.PopravniIspitDetaljiVM
@{
    ViewData["Title"] = "Detalji";
}
    <div style="text-align:center">Popravni ispiti za odjeljenje @Model.Odjeljenje - @Model.Skola - @Model.SkolskaGodina</div>
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Datum popravnog ispita</td>
                <td>Predmet</td>
                <td>Broj učenika na popravnom ispitu</td>
                <td>Broj učenika koji su položili popravni ispit (bodovi veći od 50)</td>
                <td>Akcija</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var Row in Model.Rows)
            {
                <tr>
                    <td>@Row.DatumPopravnog.ToString()</td>
                    <td>@Row.Predmet</td>
                    <td>@Row.BrojUcenikaNaPopravnom</td>
                    <td>@Row.BrojUcenikaPolozili</td>
                    <td><a asp-controller="PopravniIspit" asp-action="Uredi" asp-route-id="@Row.PopravniIspitId">Uredi</a></td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-default" asp-controller="PopravniIspit" asp-action="Dodaj" asp-route-id="@Model.OdjeljenjeId">Dodaj</a>

