@model RS1_2019_12_02.ViewModels.PopravniIspitDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<h2>Dodavanje popravnog ispita</h2>
<form>
    <input asp-for="@Model.OdjeljenjeId" hidden />
    <div class="form-group">
        <label asp-for="PredmetId" class="control-label"></label>
        <select asp-for="PredmetId" asp-items="Model.Predmeti" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="DatumPopravnog" class="control-label"></label>
        <input type="date" asp-for="DatumPopravnog" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="SkolaId" class="control-label"></label>
        <input asp-for="Skola" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="SkolskaGodinaId" class="control-label"></label>
        <input asp-for="SkolskaGodina" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="OdjeljenjeId" class="control-label"></label>
        <input asp-for="Odjeljenje" class="form-control" readonly>
    </div>
    <input type="submit" value="Snimi" class="btn btn-default" asp-controller="PopravniIspit" asp-action="Snimi">
</form>

