@model RS1_2019_11_04.ViewModels.PopravniIspitUrediVM
@{
    ViewData["Title"] = "Uredi";
}

    <div>
        <h2>Uređivanje popravnog ispita</h2>
        <form>
            <input asp-for="PredmetId" value="@Model.PredmetId" hidden />
            <div class="form-group">
                <label class="control-label" asp-for="Predmet">Predmet:</label>
                <input class="form-control" asp-for="Predmet" value="@Model.Predmet" readonly />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Razred">Razred:</label>
                <input class="form-control" asp-for="Razred" value="@Model.Razred" readonly />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="DatumIspita">Datum ispita:</label>
                <input class="form-control" type="datetime" asp-for="DatumIspita" value="@Model.DatumIspita.ToString("dd/MM/yyyy")" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Skola">Škola:</label>
                <input class="form-control" asp-for="Skola" value="@Model.Skola" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="SkolskaGodina">Školska godina:</label>
                <input class="form-control" asp-for="SkolskaGodina" value="@Model.SkolskaGodina" readonly/>
            </div>
        </form>
    </div>
    <div id="AjaxDiv">

    </div>
<script>
    $.get("/AjaxStavke/Index?id=@Model.PopravniIspitId", function (response, status) {
        $("#AjaxDiv").html(response);
    });
</script>

