@model RS1_2019_06_25.ViewModels.IspitDetaljiVM
@{
    ViewData["Title"] = "Detalji";
}

<h2 style="margin-top: 30px;">Detalji ispita</h2>
<form asp-controller="Ispit" asp-action="Snimi">
    <input asp-for="IspitId" value="@Model.IspitId" hidden />
    <div class="form-group">
        <label class="control-label">Predmet: </label>
        <input asp-for="Predmet" value="@Model.Predmet" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="control-label">Nastavnik: </label>
        <input asp-for="Nastavnik" value="@Model.Nastavnik" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="control-label">Akademska godina: </label>
        <input asp-for="AkademskaGodina" value="@Model.AkademskaGodina" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="control-label">Datum: </label>
        <input asp-for="Datum" type="date" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label class="control-label">Opis: </label>
        <textarea asp-for="Opis" class="form-control" readonly></textarea>
    </div>
</form>
<div id="AjaxDiv">

</div>
<a class="btn btn-default" asp-controller="Ispit" asp-action="DodajStudent" asp-route-id="@Model.IspitId">Dodaj</a>
<script>
    $.get("/AjaxStavke/Index?id=@Model.IspitId", function (response, status){
        $("#AjaxDiv").html(response);
    });
</script>
