@model RS1_2019_12_16.ViewModels.PopravniIspitIndexVM
@{
    ViewData["Title"] = "Index";
}

<div style="margin-top: 30px;">
    <form asp-controller="PopravniIspit" asp-action="Odaberi">
        <div class="form-group">
            <label class="control-label" asp-for="SkolaId">Škola: </label>
            <select class="form-control" asp-for="SkolaId" asp-items="@Model.Skole"></select>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="SkolskaGodinaId">Školska godina: </label>
            <select class="form-control" asp-for="SkolskaGodinaId" asp-items="@Model.SkoleskeGodine"></select>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="PredmetId">Predmet: </label>
            <select class="form-control" asp-for="PredmetId" asp-items="@Model.Predmeti"></select>
        </div>
        <div>
            <input class="btn btn-default" type="submit" />
        </div>
    </form>
</div>

